  .common-input {
  top: 0;
  left: 0;
  width: 80%;
  border: 1px solid #d1d1d1;
  outline: none;
  background: none;
  padding: 5px;
  border-radius: 5px;
  font-size: 1.2em;
  font-size:1rem;
}

.upload-container {
  border: 2px dotted #000;
}

.text-area {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

textarea {
  top: 0;
  left: 0;
  width: 95%;
  border: 1px solid #d1d1d1;
  outline: none;
  background: none;
  padding: 5px;
  border-radius: 10px;
  font-size: 1.2em;
  font-size:1rem;
}

.input-output {
  flex: 1;
}
 
