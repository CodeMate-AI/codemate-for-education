<style>
       #header {
        height: 100px;
        width: 100%;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-bottom: 10px;
    }

    #header>h1 {
        font-size: 36px;
        font-weight: bold !important;
        margin: 0;
        color: #011936;
    }

    #header>span {
        color: rgb(88, 88, 88);
        font-size: 17px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
      padding-top: 30px;
      padding-bottom: 10px;
    }

    .title-wali-div {
      display: flex;
      flex-direction: row;
      gap: 50px; 
    }
    .div1 {
      flex:1;
      display:flex;
      flex-direction: column;
      gap: 10px;
      margin: 0;
    }
    .div1 > .label2 {
      padding-top: 10px;
    }
    .div2 {
      flex:1.2;
      display: flex;
    flex-direction: column;
      gap: 8px;
      justify-content: start;
      margin: 0;
    }
    .headings {
     color: #011936;
     font-weight: 600 ;
     font-size: 0.9rem;
    }

  .common-input {
  top: 0;
  left: 0;
  width: 80%;
  border: 1px solid #d1d1d1;
  outline: none;
  background: none;
  padding: 5px;
  border-radius: 5px;
  font-size:0.9rem;
}

.upload-area {
  flex:1;
  width: 100%;
  height: 100%;
  border: 2px dashed #48AEF3;
  stroke-width: 2;
  stroke-dashoffset: 35;
  border-radius: 7px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #48AEF3;
}

.text-area {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

textarea {
  top: 0;
  left: 0;
  width: 99.5%;
  border: 1px solid #d1d1d1;
  outline: none;
  background: none;
  padding: 5px;
  border-radius: 10px;
  font-size:0.9rem;
}

.input-output {
  flex: 1;
}

.input_button {
  display: flex;
  flex-direction: row;
  top: 0;
  left: 0;
  width: 90%;
  border: 1px solid #d1d1d1;
  outline: none;
  padding: 3px;
  border-radius: 5px;
  font-size: 1rem;
}

.input_button input {
    flex:2;
    border: none; /* Remove borders from input and button */
    padding: 5px; /* Optional: Add padding for better appearance */
    margin: 0;
}
.input_button button {
    flex:1;
    border: none;
    margin: 0;
    color: #48AEF3;
    background: none;
}

.input_button > input:focus {
  border: none;
  outline: none;
}

.publish_button {
  background: #888888;
  color: white;
  font-weight: 500;
  border: none;
  outline: none;
  border-radius: 5px;
  display: flex;
  flex-direction: row;
  gap: 4px;
  justify-content: center;
  align-items: center;
  width: 8%;
  height: 10%;
  padding: 10px;
}

.publish_button.enabled {
        background: #48AEF3 !important;
     
    }

#progress-wali-class {
 padding-right: 0 !important;
 padding-left: 0 !important;
  border-top: 1.5px solid #D9D9D9BF;
  border-bottom: 1.5px solid #D9D9D9BF;
  display: flex;
  flex-direction: row;
  gap: 20px;
  font-size: 0.9rem;
}

.progress-content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 6px;
  color: #465362BF;
  position: relative; /* Position relative for pseudo-element */
}

.dot {
  height: 25px;
  width: 25px;
  background: #46536280;
  border-radius: 50%;
}

span.active {
  background-color: #011936;
}

/* Add dashed line between progress-content */
.progress-content:not(:last-child)::after {
  margin-left: 20px ;
  margin-right: 20px ;
  padding-left: 100px ;
  content: "";
  height: 1px;
  width: 100px; /* Adjust width of the dashed line */
  background-color: transparent; /* Set background color */
  border-bottom: 1.6px dashed #888888;
  stroke-width: 6; /* Add dashed line */
  top: 50%; /* Position at the middle of the parent */
  right: 100px;
  left: 100px; /* Position to the right of the parent */
}


 
</style>

<div id="header">
  <h1>Create Assignment</h1>
</div>
<div id="progress-wali-class" style="padding-left: 0 !important; padding-right: 0 !important;">
  <div class="progress-content">
    <span class="dot active"></span>
    <p>Generate</p>
  </div>
  <!-- <div class="progress-content">
    <span class="dot"></span>
    <p>Choose</p>
  </div> -->
  <div class="progress-content">
    <span class="dot"></span>
    <p>Publish and Share</p>
  </div>
</div>
