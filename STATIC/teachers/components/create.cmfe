    </label>
    <input type="file" id="file-upload" accept=".pdf,.docx" style="display: none;">
  </div>
  </div>
  </div>
  <div class="text-area">
    <label for="name" class="headings">Problem Statement</label>
    <textarea name="" id="" cols="30" rows="4"></textarea>
  </div>
  <div class=" title-wali-div">
   <div class="text-area input-output">
    <label for="input" class="headings">Sample Input</label>
   <div class="input_button">
    <input type="text" >  
    <button>Or Generate using AI</button>
   </div>
  </div>
    <div class="text-area input-output">
  <label for="output" class="headings">Sample Output</label>
   <div class="input_button">
    <input type="text"  >
    <button>Or Generate using AI</button>
   </div>
    </div>
  </div>
    <div class="title-wali-div">
  <div class="text-area">
    <label for="difficulty" class="headings">Difficulty</label>
    <input class="common-input"  list="difficulty" placeholder="Choose Difficulty">
   <datalist id="difficulty">
     <option value="Easy">
     <option value="Medium">
     <option value="Hard">
   </datalist>
  </div>
 <div class="text-area">
  <label for="difficulty" class="headings">Due Date</label>
  <input class="common-input" type="datetime-local">
 </div>
    </div>

